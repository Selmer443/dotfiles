### SETTINGS FOR i3-gaps ###

# Set inner/outer gaps
set $innergaps 20
set $outergaps 0
gaps inner 20
gaps outer 0
workspace $ws4 gaps inner 100


# Smart gaps (gaps used if only more than one container on the workspace)
# smart_gaps on

# Smart borders (draw borders around container only if it is not the only container on this workspace)
# on|no_gaps (on=always activate and no_gaps=only activate if the gap size to the edge of the screen is 0)
#smart_borders on

# Press $mod+g to enter the gap mode. Choose o or i for modifying outer/inner gaps. Press one of + / - (in-/decrement for current workspace) or 0 (remove gaps for current workspace). If you also press Shift with these keys, the change will be global for all workspaces.
set $mode_gaps Gaps: (o) outer, (i) inner, (r) reset
set $mode_gaps_outer Outer Gaps: +|-|0 (local), Shift + +|-|0 (global)
set $mode_gaps_inner Inner Gaps: +|-|0 (local), Shift + +|-|0 (global)
bindsym $mod+g mode "$mode_gaps"

mode "$mode_gaps" {
        bindsym o      mode "$mode_gaps_outer"
        bindsym i      mode "$mode_gaps_inner"
	bindsym r      gaps inner current set $innergaps; gaps outer current set $outergaps
        bindsym Return mode "default"
        bindsym Escape mode "default"
}
mode "$mode_gaps_inner" {
        bindsym plus  gaps inner current plus 5
        bindsym minus gaps inner current minus 5
        bindsym 0     gaps inner current set 0

        bindsym Shift+plus  gaps inner all plus 5
        bindsym Shift+minus gaps inner all minus 5
        bindsym Shift+0     gaps inner all set 0

        bindsym Return mode "default"
        bindsym Escape mode "default"
}
mode "$mode_gaps_outer" {
        bindsym plus  gaps outer current plus 5
        bindsym minus gaps outer current minus 5
        bindsym 0     gaps outer current set 0

        bindsym Shift+plus  gaps outer all plus 5
        bindsym Shift+minus gaps outer all minus 5
        bindsym Shift+0     gaps outer all set 0

        bindsym Return mode "default"
        bindsym Escape mode "default"
}


# save and restore layout with i3-resurrect
set $i3_resurrect i3-resurrect


set $mode_save Save Mode:(0-9) save workspace 
bindsym $mod+n mode "$mode_save"

# Save workspace mode.
mode "$mode_save" {
  bindsym 1 exec "$i3_resurrect save -w 1 --swallow=class,instance,title"; exec dunstify "Saved Worskpace 1"
  bindsym 2 exec "$i3_resurrect save -w 2 --swallow=class,instance,title"; exec dunstify "Saved Worskpace 2"
  bindsym 3 exec "$i3_resurrect save -w 3 --swallow=class,instance,title"; exec dunstify "Saved Worskpace 3"
  bindsym 4 exec "$i3_resurrect save -w 4 --swallow=class,instance,title"; exec dunstify "Saved Worskpace 4"
  bindsym 5 exec "$i3_resurrect save -w 5 --swallow=class,instance,title"; exec dunstify "Saved Worskpace 5"
  bindsym 6 exec "$i3_resurrect save -w 6 --swallow=class,instance,title"; exec dunstify "Saved Worskpace 6"
  bindsym 7 exec "$i3_resurrect save -w 7 --swallow=class,instance,title"; exec dunstify "Saved Worskpace 7"
  bindsym 8 exec "$i3_resurrect save -w 8 --swallow=class,instance,title"; exec dunstify "Saved Worskpace 8"
  bindsym 9 exec "$i3_resurrect save -w 9 --swallow=class,instance,title"; exec dunstify "Saved Worskpace 9"
  bindsym 0 exec "$i3_resurrect save -w 10 --swallow=class,instance,title"; exec dunstify "Saved Worskpace 10"

  # Back to normal: Enter, Escape, or s
  bindsym Return mode "default"
  bindsym Escape mode "default"
  bindsym n mode "default"
  bindsym $mod+n mode "default"
}


set $mode_restore Restore Mode: (0-9) restore workspace 
bindsym $mod+m mode "$mode_restore"

# Restore workspace mode.
mode "$mode_restore" {
  bindsym 1 exec "$i3_resurrect restore -w 1 --programs-only"; exec dunstify "Restored Programs on Worskpace 1"
  bindsym 2 exec "$i3_resurrect restore -w 2 --programs-only"; exec dunstify "Restored Programs on Worskpace 2"
  bindsym 3 exec "$i3_resurrect restore -w 3 --programs-only"; exec dunstify "Restored Programs on Worskpace 3"
  bindsym 4 exec "$i3_resurrect restore -w 4 --programs-only"; exec dunstify "Restored Programs on Worskpace 4"
  bindsym 5 exec "$i3_resurrect restore -w 5 --programs-only"; exec dunstify "Restored Programs on Worskpace 5"
  bindsym 6 exec "$i3_resurrect restore -w 6 --programs-only"; exec dunstify "Restored Programs on Worskpace 6"
  bindsym 7 exec "$i3_resurrect restore -w 7 --programs-only"; exec dunstify "Restored Programs on Worskpace 7"
  bindsym 8 exec "$i3_resurrect restore -w 8 --programs-only"; exec dunstify "Restored Programs on Worskpace 8"
  bindsym 9 exec "$i3_resurrect restore -w 9 --programs-only"; exec dunstify "Restored Programs on Worskpace 9"
  bindsym 0 exec "$i3_resurrect restore -w 10 --programs-only"; exec dunstify "Restored Programs on Worskpace 10"

  bindsym $mod+1 exec "$i3_resurrect restore -w 1 --layout-only"; exec dunstify "Restored Layout on Worskpace 1"
  bindsym $mod+2 exec "$i3_resurrect restore -w 2 --layout-only"; exec dunstify "Restored Layout on Worskpace 2"
  bindsym $mod+3 exec "$i3_resurrect restore -w 3 --layout-only"; exec dunstify "Restored Layout on Worskpace 3"
  bindsym $mod+4 exec "$i3_resurrect restore -w 4 --layout-only"; exec dunstify "Restored Layout on Worskpace 4"
  bindsym $mod+5 exec "$i3_resurrect restore -w 5 --layout-only"; exec dunstify "Restored Layout on Worskpace 5"
  bindsym $mod+6 exec "$i3_resurrect restore -w 6 --layout-only"; exec dunstify "Restored Layout on Worskpace 6"
  bindsym $mod+7 exec "$i3_resurrect restore -w 7 --layout-only"; exec dunstify "Restored Layout on Worskpace 7"
  bindsym $mod+8 exec "$i3_resurrect restore -w 8 --layout-only"; exec dunstify "Restored Layout on Worskpace 8"
  bindsym $mod+9 exec "$i3_resurrect restore -w 9 --layout-only"; exec dunstify "Restored Layout on Worskpace 9"
  bindsym $mod+0 exec "$i3_resurrect restore -w 10 --layout-only"; exec dunstify "Restored Layout on Worskpace 10"

  # Back to normal: Enter, Escape, or n
  bindsym Return mode "default"
  bindsym Escape mode "default"
  bindsym m mode "default"
  bindsym $mod+m mode "default"
}



